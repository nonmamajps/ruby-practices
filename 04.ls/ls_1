#!/usr/bin/env ruby
# frozen_string_literal: true

BLANK_SIZE = 23
COL_FULL_SIZE = 3

def files_to_matrix
  files = Dir.glob('*')
  sliced_files = files.each_slice(COL_FULL_SIZE).to_a
  # 配列内の要素が3つに揃うように空白を追加
  sliced_files.each do |three_col_array|
    three_col_array.concat([''] * (COL_FULL_SIZE - three_col_array.size)) if three_col_array.size < COL_FULL_SIZE
  end

  # 各要素を縦に並べる
  sliced_files.transpose.each do |row|
    print_file_to_display(row)
  end
end

def print_file_to_display(files)
  max_length = files.map(&:length).max
  files.each do |file|
    print "#{file.ljust(max_length + 1)}#{' ' * (BLANK_SIZE - max_length)}"
  end
  puts
end

files_to_matrix
